<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/equipment_cnt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/equipment_lv"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:text="â˜…+6"
            android:textAlignment="center"
            android:textColor="@color/itemlevel"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/equipment_alv"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:text="+7"
            android:textAlignment="center"
            android:textColor="@color/itemalv2"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/equipment_ships"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:text="Saratoga Kai Ni A (Lv.123) x3"
            android:textAlignment="textStart"
            android:textColor="@color/grey"
            android:textSize="12dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/equipment_cnt_sum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:paddingEnd="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingStart="5dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="11dp" />

</LinearLayout>