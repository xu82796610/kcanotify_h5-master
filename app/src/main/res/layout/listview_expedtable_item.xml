                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="3"
                            android:paddingBottom="2dp"
                            android:paddingTop="2dp"
                            android:text="TextView"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/value_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:paddingBottom="2dp"
                            android:paddingTop="2dp"
                            android:text="99:99"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/value_hq_exp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:paddingBottom="2dp"
                            android:paddingTop="2dp"
                            android:text="100"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/value_ship_exp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:paddingBottom="2dp"
                            android:paddingTop="2dp"
                            android:text="100"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/label_item2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorExpeditionTable1"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/label_fuel"
                                android:layout_width="0dp"
                                android:layout_height="20dp"
                                android:layout_weight="1"
                                android:paddingBottom="2dp"
                                android:paddingTop="2dp"
                                android:src="@mipmap/icon_fuel" />

                            <ImageView
                                android:id="@+id/label_ammo"
                                android:layout_width="0dp"
                                android:layout_height="20dp"
                                android:layout_weight="1"
                                android:paddingBottom="2dp"
                                android:paddingTop="2dp"
                                android:src="@mipmap/icon_ammo" />

                            <ImageView
                                android:id="@+id/label_steel"
                                android:layout_width="0dp"
                                android:layout_height="20dp"
                                android:layout_weight="1"
                                android:paddingBottom="2dp"
                                android:paddingTop="2dp"
                                android:src="@mipmap/icon_steel" />

                            <ImageView
                                android:id="@+id/label_bauxite"
                                android:layout_width="0dp"
                                android:layout_height="20dp"
                                android:layout_weight="1"
                                android:paddingBottom="2dp"
                                android:paddingTop="2dp"
                                android:src="@mipmap/icon_bauxite" />

                            <TextView
                                android:id="@+id/label_spitem1"
                                android:layout_width="0dp"
                                android:layout_height="20dp"
                                android:layout_weight="1"
                                android:maxLines="1"
                                android:paddingBottom="2dp"
                                android:paddingTop="2dp"
                                android:singleLine="true"
                                android:text="@string/expdtable_label_item1"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="14dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/label_spitem2"
                                android:layout_width="0dp"
                                android:layout_height="20dp"
                                android:layout_weight="1"
                                android:maxLines="1"
                                android:paddingBottom="2dp"
                                android:paddingTop="2dp"
                                android:singleLine="true"
                                android:text="@string/expdtable_label_item2"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="14dp"
                                android:textStyle="bold" />

