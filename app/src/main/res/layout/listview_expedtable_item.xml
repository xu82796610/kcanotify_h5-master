            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/expedition_full_item_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="32dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/label_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="@string/expdtable_label_no"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/value_no"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="1"
                        android:textAlignment="center"
                        android:textColor="@color/colorExpeditionTable1"
                        android:textSize="14dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/label_item1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorExpeditionTable1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/label_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:maxLines="1"
                            android:paddingBottom="2dp"
                            android:paddingTop="2dp"
                            android:singleLine="true"
                            android:text="@string/expdtable_label_name"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/label_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:paddingBottom="2dp"
                            android:paddingTop="2dp"
                            android:singleLine="true"
                            android:text="@string/expdtable_label_time"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/label_hq_exp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:paddingBottom="2dp"
                            android:paddingTop="2dp"
                            android:singleLine="true"
                            android:text="@string/expdtable_label_hq_exp"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/label_ship_exp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:paddingBottom="2dp"
                            android:paddingTop="2dp"
                            android:singleLine="true"
                            android:text="@string/expdtable_label_ship_exp"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="14dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
