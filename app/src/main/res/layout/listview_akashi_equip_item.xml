<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:id="@+id/akashi_improv_item_area">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/akashi_improv_icon"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/item_1" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/akashi_improv_name"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/akashi_improv_support"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:paddingLeft="4dp"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/akashi_improv_mat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginStart="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/akashi_improv_material"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.18"
                android:gravity="center_vertical"
                android:paddingLeft="4dp"
                android:text="1/2/4"
                android:textAlignment="textEnd"
                android:textColor="@color/colorAkashiNormalMaterial"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/akashi_improv_screws"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.14"
                android:gravity="center_vertical"
                android:paddingLeft="4dp"
                android:text="1/2/4"
                android:textAlignment="textEnd"
                android:textColor="@color/colorAkashiNormalScrew"
                android:textSize="12dp" />

        </LinearLayout>

        <TextView
            android:text="â˜†"
            android:layout_height="wrap_content"
            android:id="@+id/akashi_improv_star"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:textColor="@color/colorAccent"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"
            android:textSize="24dp"
            android:layout_width="32dp" />


    </LinearLayout>

</LinearLayout>